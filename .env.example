# ProductForge Backend - Environment Configuration Template
# Copy this to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration (LOCAL - for development)
# REDIS_URL=redis://localhost:6379

# Redis Configuration (RAILWAY - for production) 
REDIS_URL=redis://default:your-redis-password@redis.railway.internal:6379

# Server Configuration  
PORT=8000
MAX_UPLOAD_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
WORKER_RESTART_DELAY=5

# File Upload Configuration
UPLOAD_TIMEOUT=300